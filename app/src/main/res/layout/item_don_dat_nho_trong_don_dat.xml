<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:background="@drawable/custom_item_gio_hang"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/img_bong_cai_xanh"
            android:id="@+id/ivItemConDonDat"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bông cải xanh"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/tvTenSPItemConDonDat"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng : 1Kg"
            android:fontFamily="serif"
            android:layout_marginTop="3dp"
            android:textColor="#9E9898"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn giá : 17.000 VND"
            android:fontFamily="serif"
            android:layout_marginTop="3dp"
            android:textColor="#9E9898"
            />
    </LinearLayout>
</LinearLayout>