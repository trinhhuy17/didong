<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThongTinCaNhanActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar_thong_tin_ca_nhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/imgBackThongTinCaNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_10"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:background="@drawable/background_lien_he">

        <EditText
            android:id="@+id/edt_ho_ten"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittex_background"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:hint="Tên khách hàng"
            android:paddingStart="10dp"
            android:fontFamily="serif"/>
        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittex_background"
            android:layout_margin="10dp"
            android:hint="Email"
            android:paddingStart="10dp"
            android:fontFamily="serif"/>
        <EditText
            android:id="@+id/edt_sdt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittex_background"
            android:layout_margin="10dp"
            android:hint="Số điện thoại"
            android:paddingStart="10dp"
            android:fontFamily="serif"
            android:inputType="number"/>


        <EditText
            android:id="@+id/edtGioiTinh"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittex_background"
            android:layout_margin="10dp"
            android:hint="Giới tính"
            android:paddingStart="10dp"
            android:fontFamily="serif"
            android:inputType="number"/>

        <EditText
            android:id="@+id/edt_ngay_sinh"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittex_background"
            android:layout_margin="10dp"
            android:hint="Ngày sinh"
            android:paddingStart="10dp"
            android:fontFamily="serif"
            android:inputType="number"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_doi_pass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Lưu thông tin"
        android:fontFamily="serif"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/button_background_doi_pass"/>
</LinearLayout>