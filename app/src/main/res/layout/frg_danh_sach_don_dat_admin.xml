<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0F3ED">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách đơn đặt"
            android:textSize="23dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_gravity="center_horizontal"/>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_bg_themsp"
        android:layout_margin="15dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDanhSachHoaDonAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D7D4D4"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền thanh toán: 17.000 VND"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:gravity="end"
            android:layout_margin="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/btnDanhSahDonAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="#00EEEE"
            android:text="Xác nhận đơn đặt"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>