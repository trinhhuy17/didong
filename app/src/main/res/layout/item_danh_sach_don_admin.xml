<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/custom_bg_themsp"
    >
    <ImageView
        android:id="@+id/imgDanhSachDonAdmin"
        android:layout_width="100dp"
        android:layout_height="94dp"
        android:layout_margin="15dp"
        android:background="@drawable/custom_img_thong_ke"
        android:src="@drawable/img_bap_cai_trang_chu"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/txtNguoiDatDonAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người đặt: Nguyễn Đức Duy"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:id="@+id/txtSpDanhSachAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sản phẩm: Bắp cải"
            android:textColor="#9E9898"
            android:fontFamily="serif"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/txtSLuongDanhSachAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng: 1kg"
            android:textColor="#9E9898"
            android:fontFamily="serif"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/txtDonGiaDanhSachAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đơn giá: 17.000 VND"
            android:textColor="#9E9898"
            android:fontFamily="serif"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
</LinearLayout>